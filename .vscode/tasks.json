{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run current day",
      "type": "shell",
      "command": "gleam run -m aoc2024/day${input:dayNumber}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "dayNumber",
      "type": "promptString",
      "description": "Which day do you want to run?",
      "default": "9"
    }
  ]
}
